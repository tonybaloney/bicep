<Project>
  <PropertyGroup>
    <NoticeFileName>NOTICE.txt</NoticeFileName>
    <GenerateNoticeAfterTargets>Publish</GenerateNoticeAfterTargets>
  </PropertyGroup>

  <Target Name="PrepareForNoticeGeneration" BeforeTargets="GenerateNotice">
    <ItemGroup>
      <NoticeGeneratorAssetFile Include="$(ProjectAssetsFile)" />
    </ItemGroup>
    <PropertyGroup>
      <NoticeGeneratorOutputPath>$(PublishDir)\$(NoticeFileName)</NoticeGeneratorOutputPath>
    </PropertyGroup>
  </Target>
</Project>